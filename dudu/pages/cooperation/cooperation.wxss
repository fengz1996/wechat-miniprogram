.container {
  padding-bottom: 100px;
}

.cooperation-header {
  position: relative;
  height: 240rpx;
  margin-bottom: 20px;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FFD54F 0%, #FF9800 100%);
  z-index: 1;
}

.header-bg::before {
  content: '';
  position: absolute;
  top: -20%;
  right: -10%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
}

.header-bg::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -5%;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 30px;
  color: white;
  text-align: center;
}

.header-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
  text-shadow: 0 2px 4px rgba(0,0,0,0.2);
}

.header-desc {
  font-size: 14px;
  opacity: 0.9;
  line-height: 1.4;
  text-shadow: 0 1px 2px rgba(0,0,0,0.2);
}

.section {
  margin: 20px 15px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 15px;
  position: relative;
  color: var(--text-color);
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -6px;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
  border-radius: 3px;
}

.advantages-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.advantage-item {
  display: flex;
  align-items: center;
}

.advantage-icon {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-right: 15px;
  position: relative;
  flex-shrink: 0;
}

.advantage-icon-0 {
  background: linear-gradient(135deg, #FFE0B2 0%, #FF9800 100%);
}

.advantage-icon-0::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24px;
  height: 16px;
  border: 3px solid white;
  border-top: none;
  border-radius: 0 0 10px 10px;
}

.advantage-icon-0::after {
  content: '';
  position: absolute;
  top: 34%;
  left: 50%;
  transform: translateX(-50%);
  width: 10px;
  height: 3px;
  background: white;
}

.advantage-icon-1 {
  background: linear-gradient(135deg, #BBDEFB 0%, #2196F3 100%);
}

.advantage-icon-1::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 28px;
  height: 20px;
  border-radius: 2px;
  background: white;
}

.advantage-icon-1::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 16px;
  height: 16px;
  border-radius: 1px;
  border: 3px solid #2196F3;
  border-top: none;
  border-right: none;
}

.advantage-icon-2 {
  background: linear-gradient(135deg, #C8E6C9 0%, #4CAF50 100%);
}

.advantage-icon-2::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30px;
  height: 22px;
  background: white;
  clip-path: polygon(0% 0%, 100% 0%, 100% 70%, 55% 70%, 50% 100%, 45% 70%, 0% 70%);
}

.advantage-icon-3 {
  background: linear-gradient(135deg, #E1BEE7 0%, #9C27B0 100%);
}

.advantage-icon-3::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 26px;
  height: 26px;
  background: white;
  border-radius: 50%;
}

.advantage-icon-3::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 12px;
  height: 12px;
  background: #9C27B0;
  border-radius: 50%;
}

.advantage-content {
  flex: 1;
}

.advantage-title {
  font-weight: bold;
  font-size: 16px;
  margin-bottom: 4px;
}

.advantage-desc {
  color: var(--light-text);
  font-size: 14px;
  line-height: 1.4;
}

.levels-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.level-item {
  padding: 0;
  overflow: hidden;
  border-radius: var(--border-radius);
}

.level-0 .level-header {
  background: linear-gradient(135deg, #FFD54F 0%, #FF9800 100%);
}

.level-1 .level-header {
  background: linear-gradient(135deg, #90CAF9 0%, #2196F3 100%);
}

.level-2 .level-header {
  background: linear-gradient(135deg, #AED581 0%, #7CB342 100%);
}

.level-header {
  padding: 12px 16px;
  color: white;
  display: flex;
  align-items: center;
}

.level-badge {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background: rgba(255,255,255,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 12px;
}

.level-name {
  font-size: 16px;
  font-weight: bold;
}

.level-content {
  padding: 16px;
}

.level-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.level-row:last-child {
  margin-bottom: 0;
}

.level-label {
  color: var(--light-text);
  font-size: 14px;
}

.level-value {
  font-weight: 500;
}

.extra-list {
  margin-top: 10px;
}

.extra-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.extra-item:last-child {
  margin-bottom: 0;
}

.extra-icon {
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background: var(--primary-color);
  margin-right: 10px;
}

.contact-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 12px;
  color: var(--text-color);
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  position: relative;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  position: relative;
}

.contact-phone::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 16px;
  height: 16px;
  border: 2px solid var(--secondary-color);
  border-radius: 3px;
  transform: rotate(45deg);
}

.contact-phone::after {
  content: '';
  position: absolute;
  top: 6px;
  left: 6px;
  width: 8px;
  height: 8px;
  background: var(--secondary-color);
  border-radius: 50%;
}

.contact-address::before {
  content: '';
  position: absolute;
  top: 0;
  left: 5px;
  width: 10px;
  height: 14px;
  border: 2px solid var(--secondary-color);
  border-radius: 6px;
}

.contact-address::after {
  content: '';
  position: absolute;
  top: 4px;
  left: 9px;
  width: 2px;
  height: 2px;
  background: var(--secondary-color);
  border-radius: 50%;
}

.contact-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  background: var(--primary-color);
  color: white;
  padding: 6px 12px;
  border-radius: 50px;
  font-size: 12px;
  font-weight: 500;
}

.join-button {
  position: fixed;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: white;
  padding: 12px 30px;
  border-radius: 50px;
  font-size: 16px;
  font-weight: bold;
  box-shadow: 0 4px 12px rgba(242, 169, 0, 0.3);
  transition: all 0.3s;
}

.join-button:active {
  transform: translate(-50%, 2px);
  box-shadow: 0 2px 8px rgba(242, 169, 0, 0.3);
}