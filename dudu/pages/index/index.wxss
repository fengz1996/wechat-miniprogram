.container {
  padding-bottom: 20px;
}

.banner-section {
  position: relative;
  height: 360rpx;
  width: 100%;
}

.banner {
  height: 360rpx;
  width: 100%;
}

.banner-item {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 100%;
  width: 100%;
  border-radius: 0 0 24px 24px;
  overflow: hidden;
}

.banner-item-0 {
  background: linear-gradient(135deg, #FFE082 0%, #FFB300 100%);
}

.banner-item-1 {
  background: linear-gradient(135deg, #A5D6A7 0%, #4CAF50 100%);
}

.banner-item-2 {
  background: linear-gradient(135deg, #90CAF9 0%, #2196F3 100%);
}

.banner-content {
  z-index: 2;
  color: #fff;
  text-align: center;
  padding: 0 30px;
}

.banner-title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 8px;
  text-shadow: 0 2px 4px rgba(0,0,0,0.2);
}

.banner-desc {
  font-size: 16px;
  opacity: 0.9;
  text-shadow: 0 1px 2px rgba(0,0,0,0.2);
}

.banner-item::before {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  transform: translate(50%, 50%);
}

.banner-item::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
}

.dots {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.dot {
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background-color: rgba(255,255,255,0.6);
  margin: 0 4px;
  transition: all 0.3s;
}

.dot.active {
  width: 16px;
  background-color: #fff;
}

.quick-actions {
  display: flex;
  justify-content: center;
  margin: -24px 0 20px;
  position: relative;
  z-index: 10;
}

.action-btn {
  background: linear-gradient(135deg, #FFD54F 0%, #FF9800 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: 50px;
  font-weight: bold;
  font-size: 16px;
  box-shadow: 0 4px 12px rgba(255, 152, 0, 0.3);
  transition: all 0.3s;
}

.action-btn:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(255, 152, 0, 0.3);
}

.action-icon {
  margin-right: 8px;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-btn-icon {
  position: relative;
  width: 18px;
  height: 18px;
  border: 2px solid white;
}

.scan-btn-icon::before, .scan-btn-icon::after {
  content: '';
  position: absolute;
  left: 5px;
  width: 8px;
  height: 2px;
  background-color: white;
}

.scan-btn-icon::before {
  top: 5px;
}

.scan-btn-icon::after {
  bottom: 5px;
}

.section-title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin: 20px 0;
  position: relative;
  color: var(--text-color);
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -6px;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
  border-radius: 3px;
}

.vision-mission {
  margin: 15px;
}

.vision-mission .title {
  color: var(--secondary-color);
}

.vision-mission .content {
  margin-bottom: 15px;
  line-height: 1.5;
}

.divider {
  height: 1px;
  background: linear-gradient(90deg, transparent, #E0E0E0, transparent);
  margin: 15px 0;
}

.values {
  margin: 15px;
}

.value-card {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.value-icon {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-right: 12px;
  position: relative;
  flex-shrink: 0;
}

.value-icon-0 {
  background: linear-gradient(135deg, #C8E6C9 0%, #4CAF50 100%);
}

.value-icon-0::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background: rgba(255,255,255,0.3);
}

.value-icon-0::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20px;
  height: 20px;
  background: rgba(255,255,255,0.6);
  clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
}

.value-icon-1 {
  background: linear-gradient(135deg, #FFECB3 0%, #FFA000 100%);
}

.value-icon-1::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30px;
  height: 30px;
  border-radius: 2px;
  background: rgba(255,255,255,0.3);
}

.value-icon-1::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  width: 20px;
  height: 20px;
  background: rgba(255,255,255,0.6);
  border-radius: 2px;
}

.value-icon-2 {
  background: linear-gradient(135deg, #B3E5FC 0%, #0288D1 100%);
}

.value-icon-2::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: rgba(255,255,255,0.3);
}

.value-icon-2::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 16px;
  height: 16px;
  background: rgba(255,255,255,0.6);
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
}

.value-content {
  flex: 1;
}

.value-title {
  font-weight: bold;
  font-size: 16px;
  margin-bottom: 4px;
}

.value-desc {
  color: var(--light-text);
  font-size: 14px;
  line-height: 1.4;
}

.product-intro {
  margin: 15px;
}

.product-features {
  display: flex;
  justify-content: space-around;
  margin-top: 15px;
}

.feature {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-bottom: 8px;
  position: relative;
}

.feature-icon-1 {
  background: linear-gradient(135deg, #FFF3E0 0%, #F57C00 100%);
}

.feature-icon-1::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 22px;
  height: 28px;
  background: rgba(255,255,255,0.8);
  border-radius: 12px 12px 14px 14px;
}

.feature-icon-1::after {
  content: '';
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 10px;
  height: 10px;
  background: var(--secondary-color);
  border-radius: 50%;
}

.feature-icon-2 {
  background: linear-gradient(135deg, #E0F7FA 0%, #00ACC1 100%);
}

.feature-icon-2::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20px;
  height: 24px;
  border: 3px solid rgba(255,255,255,0.8);
  border-top: none;
  border-radius: 0 0 12px 12px;
}

.feature-icon-2::after {
  content: '';
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, 0);
  width: 12px;
  height: 3px;
  background: rgba(255,255,255,0.8);
}

.feature-icon-3 {
  background: linear-gradient(135deg, #E8F5E9 0%, #66BB6A 100%);
}

.feature-icon-3::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24px;
  height: 24px;
  background: rgba(255,255,255,0.8);
  clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
}

.feature-icon-3::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  width: 16px;
  height: 2px;
  background: var(--secondary-color);
  box-shadow: 0 0 0 2px rgba(255,255,255,0.8);
}

.feature text {
  color: var(--text-color);
  font-weight: 500;
}