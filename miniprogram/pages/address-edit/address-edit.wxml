<view class="address-edit-container">
  <form bindsubmit="onSubmit">
    <view class="form-group">
      <text class="form-label">收货人姓名</text>
      <input class="form-input" name="name" value="{{address.name || ''}}" placeholder="请输入姓名" required/>
    </view>
    <view class="form-group">
      <text class="form-label">手机号</text>
      <input class="form-input" name="phone" value="{{address.phone || ''}}" placeholder="请输入手机号" type="number" maxlength="11" required/>
    </view>
    <view class="form-group">
      <text class="form-label">详细地址</text>
      <input class="form-input" name="detail" value="{{address.detail || ''}}" placeholder="请输入详细地址" required/>
    </view>
    <button class="submit-btn" formType="submit">保存地址</button>
  </form>
</view>