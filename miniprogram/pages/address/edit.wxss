.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.form {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 28rpx;
}

.region {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}

.textarea {
  flex: 1;
  height: 120rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  width: 100%;
}

.form-item.switch {
  justify-content: space-between;
}

