/* pages/cart/cart.wxss */

.container {
  padding: 0;
  background-color: var(--neutral-95);
  min-height: 100vh;
}

/* 购物车列表 */
.cart-list {
  padding-bottom: 100rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: var(--neutral-100);
  margin-bottom: var(--spacing-sm);
  padding: var(--spacing-md);
}

.select-checkbox {
  padding: var(--spacing-sm);
  margin-right: var(--spacing-sm);
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid var(--neutral-60);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.checkbox.checked {
  background-color: var(--brand-primary);
  border-color: var(--brand-primary);
}

.checkbox.checked:after {
  content: '';
  width: 20rpx;
  height: 10rpx;
  border: 2rpx solid white;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg) translate(2rpx, -2rpx);
}

.item-content {
  flex: 1;
  display: flex;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: var(--spacing-md);
  border-radius: var(--radius-md);
  overflow: hidden;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: var(--font-md);
  color: var(--neutral-20);
  margin-bottom: var(--spacing-md);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: var(--font-lg);
  color: var(--brand-primary);
  font-weight: 600;
}

.item-price::before {
  content: "¥";
  font-size: 0.8em;
  margin-right: 2rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid var(--neutral-80);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--neutral-95);
}

.quantity-btn.disabled {
  opacity: 0.5;
}

.icon-minus, .icon-plus {
  width: 20rpx;
  height: 20rpx;
  position: relative;
}

.icon-minus:before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 2rpx;
  background-color: var(--neutral-30);
  top: 50%;
  left: 0;
  margin-top: -1rpx;
}

.icon-plus:before, .icon-plus:after {
  content: '';
  position: absolute;
  background-color: var(--neutral-30);
}

.icon-plus:before {
  width: 20rpx;
  height: 2rpx;
  top: 50%;
  left: 0;
  margin-top: -1rpx;
}

.icon-plus:after {
  width: 2rpx;
  height: 20rpx;
  top: 0;
  left: 50%;
  margin-left: -1rpx;
}

.quantity-display {
  width: 60rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-sm);
  border-left: 1rpx solid var(--neutral-80);
  border-right: 1rpx solid var(--neutral-80);
}

.delete-btn {
  padding: var(--spacing-md);
  color: var(--neutral-50);
}

.icon-delete {
  width: 32rpx;
  height: 32rpx;
  position: relative;
}

.icon-delete:before, .icon-delete:after {
  content: '';
  position: absolute;
  width: 32rpx;
  height: 2rpx;
  background-color: var(--neutral-50);
  top: 50%;
  left: 0;
}

.icon-delete:before {
  transform: rotate(45deg);
}

.icon-delete:after {
  transform: rotate(-45deg);
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: var(--neutral-100);
  display: flex;
  align-items: center;
  padding: 0 var(--spacing-md);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all text {
  margin-left: var(--spacing-sm);
  font-size: var(--font-md);
}

.total-info {
  flex: 1;
  display: flex;
  align-items: baseline;
  margin-left: var(--spacing-lg);
  font-size: var(--font-md);
}

.total-price {
  font-size: var(--font-lg);
  color: var(--brand-primary);
  font-weight: 700;
}

.checkout-btn {
  min-width: 200rpx;
  height: 70rpx;
  background: linear-gradient(135deg, var(--brand-primary), var(--brand-primary-dark));
  color: white;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-md);
  font-weight: 500;
}

.checkout-btn.disabled {
  background: var(--neutral-70);
  opacity: 0.8;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx var(--spacing-xl);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-xl);
  position: relative;
}

.icon-empty-cart {
  width: 100%;
  height: 100%;
  position: relative;
}

.icon-empty-cart:before {
  content: '';
  position: absolute;
  width: 140rpx;
  height: 90rpx;
  border: 4rpx solid var(--neutral-70);
  border-radius: var(--radius-md);
  bottom: 40rpx;
  left: 30rpx;
}

.icon-empty-cart:after {
  content: '';
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--neutral-70);
  border-radius: 50%;
  bottom: 20rpx;
  right: 50rpx;
  box-shadow: -50rpx 0 0 -1rpx var(--neutral-95), -50rpx 0 0 3rpx var(--neutral-70);
}

.empty-text {
  font-size: var(--font-lg);
  color: var(--neutral-30);
  margin-bottom: var(--spacing-sm);
}

.empty-subtext {
  font-size: var(--font-md);
  color: var(--neutral-50);
  margin-bottom: var(--spacing-xl);
}

.btn-go-shopping {
  width: 300rpx;
  height: 80rpx;
  background: linear-gradient(135deg, var(--brand-primary), var(--brand-primary-dark));
  color: white;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-md);
  font-weight: 500;
}