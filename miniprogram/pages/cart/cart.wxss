  background-repeat: no-repeat;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.address-content {
  flex: 1;
}

.contact-info {
  display: flex;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-bottom: 10rpx;
}

.name {
  margin-right: 20rpx;
  font-weight: bold;
}

.phone {
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 36rpx;
}

