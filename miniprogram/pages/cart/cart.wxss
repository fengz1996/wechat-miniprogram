page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  padding-bottom: calc(150rpx + env(safe-area-inset-bottom) + 98rpx); /* 调整底部填充，为结算栏和tabBar留出空间 */
}

/* 地址选择部分样式 */
.address-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

