.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
  border: 1px solid #eee;
}

.quantity-btn.disabled {
  opacity: 0.5;
}

.quantity-display {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.icon-minus, .icon-plus {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.icon-minus::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 4rpx;
  background: #333;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.icon-plus::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 4rpx;
  background: #333;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.icon-plus::after {
  content: '';
  position: absolute;
  width: 4rpx;
  height: 20rpx;
  background: #333;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

