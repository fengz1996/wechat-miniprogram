page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  padding-bottom: 120rpx;
}

/* 地址选择部分样式 */
.address-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  background-image: url("data:image/svg+xml,%3Csvg t='1597912583709' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='3163' width='32' height='32'%3E%3Cpath d='M512 96c-199.872 0-362 159.36-362 356 0 196.688 295.296 455.712 307.816 467.712 11.728 11.28 27.064 16.912 42.456 16.912h23.448c15.392 0 30.736-5.632 42.456-16.912C578.704 907.712 874 648.688 874 452c0-196.64-162.128-356-362-356z m0 444c-61.76 0-112-50.24-112-112s50.24-112 112-112 112 50.24 112 112-50.24 112-112 112z' fill='%23ff4500' p-id='3164'%3E%3C/path%3E%3C/svg%3E");
  background-size: contain;
  background-repeat: no-repeat;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.address-content {
  flex: 1;
}

.contact-info {
  display: flex;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-bottom: 10rpx;
}

.name {
  margin-right: 20rpx;
  font-weight: bold;
}

.phone {
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 36rpx;
}

.arrow-right {
  width: 16rpx;
  height: 28rpx;
  background-image: url("data:image/svg+xml,%3Csvg t='1597913715776' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='2078' width='16' height='16'%3E%3Cpath d='M347.687 144.188l-52.761 52.238 313.928 316.082-316.568 313.42 52.314 52.673 369.322-365.665z' p-id='2079' fill='%23999999'%3E%3C/path%3E%3C/svg%3E");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  margin-left: 20rpx;
}

.no-address {
  width: 100%;
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.no-address text {
  flex: 1;
}

/* 购物车列表样式 */
.cart-list {
  margin: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.select-checkbox {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  position: relative;
}

.checkbox.checked {
  background-color: #ff4500;
  border-color: #ff4500;
}

.checkbox.checked::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 8rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-45deg);
}

.item-content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.product-img {
  width: 100%;
  height: 100%;
}

.product-image-placeholder {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.item-price {
  color: #ff4500;
  font-size: 32rpx;
  font-weight: bold;
}

.item-price::before {
  content: '¥';
  font-size: 24rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity-display {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

.icon-minus, .icon-plus {
  position: relative;
  width: 28rpx;
  height: 28rpx;
}

.icon-minus::before {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 2rpx;
  background: #666;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.icon-plus::before {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 2rpx;
  background: #666;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.icon-plus::after {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 24rpx;
  background: #666;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.quantity-btn.disabled {
  opacity: 0.5;
}

.delete-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-delete {
  width: 32rpx;
  height: 32rpx;
  background-image: url("data:image/svg+xml,%3Csvg t='1597916782929' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='3271' width='32' height='32'%3E%3Cpath d='M832 256l-128-128H320l-128 128H128v64h768v-64h-64zM320 192h384l64 64H256l64-64z m448 896H256c-35.2 0-64-28.8-64-64V384h640v640c0 35.2-28.8 64-64 64zM640 512h-64v384h64V512z m-192 0h-64v384h64V512z' p-id='3272' fill='%23999999'%3E%3C/path%3E%3C/svg%3E");
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.6;
}

/* 底部结算栏样式 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.total-price {
  font-size: 36rpx;
  color: #ff4500;
  font-weight: bold;
}

.checkout-btn {
  width: 240rpx;
  height: 80rpx;
  background: #ff4500;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkout-btn.disabled {
  background: #ccc;
}

/* 空购物车样式 */
