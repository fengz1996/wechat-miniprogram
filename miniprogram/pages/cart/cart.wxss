  background-size: contain;
  background-repeat: no-repeat;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-go-shopping {
  width: 300rpx;
  height: 80rpx;
  background: #ff4500;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.safe-area-bottom {
  height: 68rpx;
}