/* 购物车列表样式 */
.cart-list {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

.select-checkbox {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 100%;
  height: 100%;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  box-sizing: border-box;
}

.checkbox.checked {
  background-color: #ff4500;
  border-color: #ff4500;
  background-image: url("data:image/svg+xml,%3Csvg t='1597913433297' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='3750' width='16' height='16'%3E%3Cpath d='M384 689.92L206.08 512l-60.16 60.16L384 810.24l494.08-494.08-60.16-60.16z' fill='%23FFFFFF' p-id='3751'%3E%3C/path%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 20rpx 20rpx;
}

.item-content {
  display: flex;
  flex: 1;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f5f5f5;
}

.product-img {
  width: 100%;
  height: 100%;
}

.product-image-placeholder {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

