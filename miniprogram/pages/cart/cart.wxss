.cart-container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 130rpx;
}
.address-bar {
  background: #fff;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  margin: 24rpx 24rpx 0 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.03);
  font-size: 28rpx;
  justify-content: space-between;
}
.address-edit, .address-add {
  color: #ff8c1a;
  font-weight: 500;
}
.address-info text { display: block; }
.cart-list {
  margin: 24rpx;
}
.cart-item {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.03);
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  position: relative;
}
.cart-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin-right: 24rpx;
  background: #eee;
}
.cart-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.cart-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
.cart-desc {
  color: #999;
  font-size: 24rpx;
  margin: 8rpx 0;
}
.cart-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}
.cart-price {
  color: #ff8c1a;
  font-weight: 700;
  font-size: 32rpx;
}
.cart-qty {
  display: flex;
  align-items: center;
}
.qty-btn {
  background: #f6f6f6;
  color: #333;
  min-width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  font-size: 28rpx;
  margin: 0 6rpx;
  border: none;
}
.qty-num {
  font-size: 28rpx;
  min-width: 40rpx;
  text-align: center;
}
.del-btn {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  background: #ffebeb;
  color: #ff4d4f;
  font-size: 24rpx;
  border-radius: 24rpx;
  padding: 4rpx 16rpx;
  border: none;
}
.empty-cart {
  text-align: center;
  margin-top: 120rpx;
}
.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}
.empty-text {
  font-size: 32rpx;
  color: #aaa;
  margin-bottom: 24rpx;
}
.empty-btn {
  background: #ff8c1a;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  padding: 16rpx 60rpx;
  border: none;
}
.cart-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 36rpx;
  z-index: 999;
}
.footer-left {
  font-size: 28rpx;
}
.footer-price {
  color: #ff8c1a;
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 8rpx;
}
.checkout-btn {
  background: linear-gradient(90deg,#ff8c1a,#ff6500);
  color: #fff;
  border-radius: 36rpx;
  font-size: 32rpx;
  font-weight: 700;
  height: 70rpx;
  min-width: 200rpx;
  box-shadow: 0 4rpx 16rpx rgba(255,140,26,0.12);
  border: none;
}
.checkout-btn[disabled] {
  background: #eee;
  color: #bbb;
}