<view class="container">
  <image src="{{dish.imageUrl}}" mode="aspectFill" class="dish-banner"></image>
  
  <view class="dish-info">
    <view class="dish-name">{{dish.name}}</view>
    <view class="dish-price">¥{{dish.price}}</view>
    <view class="dish-detail">
      <view class="dish-detail-item">
        <text class="detail-label">净含量</text>
        <text class="detail-value">{{dish.weight}}</text>
      </view>
      <view class="dish-detail-item">
        <text class="detail-label">月售</text>
        <text class="detail-value">{{dish.sales}}份</text>
      </view>
    </view>
  </view>
  
  <view class="section">
    <view class="section-title">商品介绍</view>
    <view class="dish-description">
      {{dish.description || '纯手工制作，选用上等食材，不含任何添加剂，口感醇厚，回味无穷。'}}
    </view>
  </view>
  
  <view class="recommend-section">
    <view class="section-title">猜你喜欢</view>
    <scroll-view class="recommend-list" scroll-x>
      <view class="recommend-item" wx:for="{{recommendDishes}}" wx:key="id" bindtap="navigateToDish" data-id="{{item.id}}">
        <image src="{{item.imageUrl}}" mode="aspectFill" class="recommend-image"></image>
        <view class="recommend-name">{{item.name}}</view>
        <view class="recommend-price">¥{{item.price}}</view>
      </view>
    </scroll-view>
  </view>
  
  <view class="bottom-bar">
    <view class="cart-btn" bindtap="navigateToCart">
      <view class="cart-icon"></view>
      <view class="cart-badge" wx:if="{{cartTotal > 0}}">{{cartTotal}}</view>
    </view>
    <view class="action-btns">
      <button class="add-to-cart-btn" bindtap="addToCart">加入购物车</button>
      <button class="buy-now-btn" bindtap="buyNow">立即购买</button>
    </view>
  </view>
</view>