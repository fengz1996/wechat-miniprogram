  opacity: 1;
  z-index: 0;
  pointer-events: none;
}

.index-container::after {
  content: '';
  position: fixed;
  inset: 0;
  background: 
    repeating-linear-gradient(45deg, rgba(232, 108, 0, 0.015) 0px, rgba(232, 108, 0, 0.015) 1px, transparent 1px, transparent 25px),
    repeating-linear-gradient(135deg, rgba(168, 58, 49, 0.01) 0px, rgba(168, 58, 49, 0.01) 1px, transparent 1px, transparent 25px);
  opacity: 1;
  z-index: 0;
  pointer-events: none;
  animation: textureShift 180s linear infinite;
}

@keyframes textureShift {
  0% { background-position: 0 0; }
  100% { background-position: 500px 500px; }
}

/* =============== 导航栏 =============== */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  box-shadow: 
    0 4rpx 30rpx rgba(232, 108, 0, 0.3),
    0 1rpx 0 rgba(255, 255, 255, 0.1) inset,
    0 -1rpx 0 rgba(0, 0, 0, 0.1) inset;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  height: 86rpx;
  position: relative;
  overflow: hidden;
}

.nav-content::before {
  content: '';
  position: absolute;
  inset: 0;
  background-image: 
    radial-gradient(circle at 15% 50%, rgba(255, 255, 255, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 85% 30%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
    url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23FFFFFF' fill-opacity='0.03'%3E%3Cpolygon points='0,0 2,0 2,2 0,2'/%3E%3C/g%3E%3C/svg%3E");
  opacity: 1;
  z-index: -1;
}

/* 3D Logo */
.logo-container {
  perspective: 800rpx;
}

.logo-inner {
  position: relative;
  transform-style: preserve-3d;
  animation: logoFloat 3s ease-in-out infinite alternate;
}

@keyframes logoFloat {
  0% { transform: translateY(0) rotateX(0deg); }
  100% { transform: translateY(-4rpx) rotateX(10deg); }
}

.logo-text {
  font-size: 38rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 2rpx;
  text-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.2),
    0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.logo-highlight {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40%;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.4), transparent);
  border-radius: var(--radius-md) var(--radius-md) 0 0;
  filter: blur(2rpx);
  opacity: 0.5;
  z-index: -1;
}

/* 3D Search Bar */
.search-bar {
  flex: 1;
  max-width: 460rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.12);
  border-radius: var(--radius-round);
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 
    0 4rpx 15rpx rgba(0, 0, 0, 0.1),
    0 2rpx 0 rgba(255, 255, 255, 0.1) inset,
    0 -1rpx 0 rgba(0, 0, 0, 0.1) inset;
  position: relative;
  overflow: hidden;
  transform-style: preserve-3d;
  transform: perspective(500rpx) rotateX(5deg) translateZ(0);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.search-icon-wrapper {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  position: relative;
  z-index: 2;
}

.search-bar input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: white;
  position: relative;
  z-index: 2;
}

.search-bar input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.search-light {
  position: absolute;
  top: -50%;
  left: -100%;
  width: 60%;
  height: 300%;
  background: linear-gradient(
    90deg, 
    transparent, 
    rgba(255, 255, 255, 0.2), 
    transparent
  );
  transform: rotate(35deg);
  animation: searchLightMove 3s infinite;
  z-index: 1;
  filter: blur(3rpx);
}

@keyframes searchLightMove {
  0% { left: -100%; }
  20%, 100% { left: 200%; }
}

