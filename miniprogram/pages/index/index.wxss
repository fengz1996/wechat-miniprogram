  transform: translateY(4rpx);
  transition: all 0.3s ease;
  z-index: 1;
}

.add-btn-sm-3d:active .add-btn-sm-shadow {
  opacity: 0.2;
  transform: translateY(2rpx) scale(0.8);
  filter: blur(3rpx);
}

.new-card-glow {
  position: absolute;
  inset: 0;
  background: linear-gradient(45deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.08) 45%, 
    rgba(255, 255, 255, 0.08) 55%, 
    transparent 100%);
  z-index: 1;
  pointer-events: none;
  transition: transform 0.6s ease;
  transform: translateZ(5rpx);
}

.new-item:active .new-card-glow {
  transform: translateZ(5rpx) translateX(-100%);
}

/* =============== 购物车悬浮按钮 =============== */
.cart-float-container {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  z-index: 100;
  perspective: 800rpx;
}

.cart-float-3d {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  transform-style: preserve-3d;
  animation: cartAppear 0.6s 1s cubic-bezier(0.175, 0.885, 0.32, 1.275) backwards;
  transform: translateZ(50rpx) rotateY(0deg) rotateX(0deg);
  transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes cartAppear {
  from { opacity: 0; transform: translateZ(50rpx) scale(0) translateY(100rpx); }
  to { opacity: 1; transform: translateZ(50rpx) scale(1) translateY(0); }
}

.cart-float-3d:active {
  transform: translateZ(40rpx) rotateY(15deg) rotateX(-15deg) scale(0.9);
}

.cart-float-inner {
  position: relative;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--primary), var(--primary-darker));
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 
    0 15rpx 30rpx rgba(232, 108, 0, 0.4),
    0 8rpx 16rpx rgba(0, 0, 0, 0.1),
    0 2rpx 0 rgba(255, 255, 255, 0.3) inset,
    0 -2rpx 0 rgba(0, 0, 0, 0.2) inset;
  transform: translateZ(20rpx);
  overflow: hidden;
  z-index: 3;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.cart-float-inner::before {
  content: '';
  position: absolute;
  top: -30%;
  left: -30%;
  width: 160%;
  height: 160%;
  background: radial-gradient(circle at 30% 30%, 
    rgba(255, 255, 255, 0.3) 0%, 
    transparent 60%);
  z-index: 2;
  pointer-events: none;
}

.cart-icon-wrapper {
  position: relative;
  z-index: 4;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: cartIconFloat 2s ease-in-out infinite alternate;
}

@keyframes cartIconFloat {
  from { transform: translateY(0); }
  to { transform: translateY(-3rpx); }
}

.cart-count {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  min-width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  background: white;
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.2),
    0 1rpx 0 rgba(255, 255, 255, 0.8) inset;
  border: 1px solid rgba(255, 255, 255, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translateZ(30rpx);
  z-index: 5;
}

.cart-count text {
  color: var(--primary-darker);
  font-size: 22rpx;
  font-weight: 700;
  position: relative;
  z-index: 2;
}

.cart-count-pulse {
  position: absolute;
  inset: 0;
  border-radius: 18rpx;
  background: white;
  opacity: 0.8;
  z-index: 1;
  animation: cartCountPulse 2s infinite;
}

@keyframes cartCountPulse {
  0%, 100% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.3); opacity: 0; }
}

.cart-float-shadow {
  position: absolute;
  top: 105%;
  left: 10%;
  right: 10%;
  height: 10rpx;
  background: var(--shadow-color-dark);
  border-radius: 50%;
  filter: blur(3rpx);
  opacity: 0.4;
  transform: rotateX(60deg) translateZ(-20rpx);
  transition: all 0.5s ease;
}

.cart-float-3d:active .cart-float-shadow {
  opacity: 0.3;
  transform: rotateX(60deg) translateZ(-20rpx) scale(0.9);
  filter: blur(5rpx);
}

.cart-float-ring {
  position: absolute;
  inset: -10rpx;
  border: 3rpx dashed rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: rotate 20s linear infinite;
  z-index: 2;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.cart-float-particles {
  position: absolute;
  inset: -20rpx;
  z-index: 1;
  transform-style: preserve-3d;
  animation: floatRotate 20s linear infinite;
}

@keyframes floatRotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.particle {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: var(--primary-lighter);
  box-shadow: 0 0 5rpx var(--primary-lighter);
  opacity: 0;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(calc(30deg * var(--i, 0))) translateY(-60rpx);
  animation: particleFade 3s infinite;
  animation-delay: calc(0.2s * var(--i, 0));
}

@keyframes particleFade {
  0% { opacity: 0; transform: translate(-50%, -50%) rotate(calc(30deg * var(--i, 0))) translateY(-60rpx) scale(0); }
  20% { opacity: 1; transform: translate(-50%, -50%) rotate(calc(30deg * var(--i, 0))) translateY(-80rpx) scale(1); }
  80%, 100% { opacity: 0; transform: translate(-50%, -50%) rotate(calc(30deg * var(--i, 0))) translateY(-120rpx) scale(0); }
}

/* =============== 底部安全区域 =============== */
.safe-area {
  height: 140rpx;
}

/* =============== 文本样式 =============== */
.text-ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* =============== 响应式适配 =============== */
@media (min-width: 768px) {
  .new-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .category-grid {
    grid-template-columns: repeat(6, 1fr);
  }
}

/* =============== 暗色主题支持 =============== */
@media (prefers-color-scheme: dark) {
  page {
    --background: #21201D;
    --card-bg: #2D2A26;
    --secondary-dark: #F0E5D8;
    --shadow-color: rgba(0, 0, 0, 0.25);
    --shadow-color-dark: rgba(0, 0, 0, 0.4);
    --shadow-color-light: rgba(0, 0, 0, 0.15);
  }
  
  .notice-card, .category-face.front, .hot-card-3d, .new-card-3d {
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .notice-card::before, .hot-card-3d::before, .new-card-3d::before {
    opacity: 0.05;
  }
  
  .search-bar {
    background: rgba(255, 255, 255, 0.08);
  }
  
  .category-icon-3d {
    box-shadow: 
      0 6rpx 12rpx rgba(232, 108, 0, 0.2),
      0 1rpx 0 rgba(255, 255, 255, 0.1) inset;
  }
  
  .hot-image-shine, .banner-shine, .new-card-glow {
    opacity: 0.5;
  }
}

/* =============== 动画集合 =============== */
@keyframes breathe {
  0%, 100% { opacity: 0.7; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.05); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes ripple {
  0% { transform: scale(0.8); opacity: 1; }
  100% { transform: scale(2); opacity: 0; }
}

/* 3D悬停效果工具类 */
.hover-3d {
  transition: transform 0.3s ease;
  transform: perspective(800px) rotateX(0) rotateY(0);
}

.hover-3d:active {
  transform: perspective(800px) rotateX(10deg) rotateY(-10deg);
}

/* 按需加载动画工具类 */
.reveal {
  opacity: 0;
  transform: translateY(30rpx);
}

.reveal.active {
  opacity: 1;
  transform: translateY(0);
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}