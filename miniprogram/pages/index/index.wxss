/* =============== 内容区域 =============== */
.content {
  position: relative;
  z-index: 5;
  height: 100vh;
  box-sizing: border-box;
  overflow-y: auto;
  perspective: var(--perspective);
}

/* =============== 3D轮播图样式 =============== */
.banner-swiper {
  height: 340rpx;
  margin: 20rpx 0 30rpx;
  position: relative;
}

.banner-item {
  height: 100%;
  padding: 0 16rpx;
  display: flex;
  justify-content: center;
  transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transform: scale(0.9);
  opacity: 0.5;
}

.banner-item.active {
  transform: scale(1);
  opacity: 1;
}

.banner-card-3d {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: var(--radius-xl);
  overflow: hidden;
  transform-style: preserve-3d;
  transform: perspective(1000rpx) rotateX(var(--card-rotation-x)) rotateY(var(--card-rotation-y));
  transition: transform 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 
    0 20rpx 40rpx rgba(0, 0, 0, 0.2),
    0 10rpx 20rpx rgba(232, 108, 0, 0.1);
}

.banner-card-3d:active {
  transform: perspective(1000rpx) rotateX(calc(var(--card-rotation-x) * 1.5)) rotateY(calc(var(--card-rotation-y) * 1.5)) scale(0.98);
}

.banner-gradient {
  position: absolute;
  inset: 0;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateZ(0);
}

.banner-texture {
  position: absolute;
  inset: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.05' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.15'/%3E%3C/svg%3E");
  opacity: 0.7;
  mix-blend-mode: overlay;
}

.banner-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.15;
  filter: blur(2rpx);
  transform: translateZ(20rpx);
  animation: bannerIconFloat 10s ease-in-out infinite alternate;
}

@keyframes bannerIconFloat {
  0% { transform: translateZ(20rpx) rotate(0deg) translateY(0); }
  50% { transform: translateZ(20rpx) rotate(5deg) translateY(-10rpx); }
  100% { transform: translateZ(20rpx) rotate(-5deg) translateY(10rpx); }
}

.banner-content {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  max-width: 60%;
  transform: translateZ(40rpx);
}

.banner-title {
  font-size: 42rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
  transform: translateZ(10rpx);
}

.banner-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
}

.banner-btn {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-round);
  font-size: 24rpx;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  box-shadow: 
    0 4rpx 10rpx rgba(0, 0, 0, 0.1),
    0 1rpx 0 rgba(255, 255, 255, 0.3) inset;
  backdrop-filter: blur(5rpx);
  transform: translateZ(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.banner-btn:active {
  transform: translateZ(5rpx) scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.banner-image {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 60%;
  z-index: 0;
  object-fit: cover;
  object-position: center;
  opacity: 0.9;
  mask-image: linear-gradient(to right, transparent 0%, black 30%);
  -webkit-mask-image: linear-gradient(to right, transparent 0%, black 30%);
  transform: translateZ(10rpx);
  transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
}

.banner-card-3d:active .banner-image {
  transform: translateZ(10rpx) scale(1.05);
}

.banner-overlay {
  position: absolute;
  inset: 0;
  z-index: 3;
  background: 
    linear-gradient(to right, rgba(0, 0, 0, 0.4) 0%, transparent 60%),
    linear-gradient(to top, rgba(0, 0, 0, 0.4) 0%, transparent 40%);
  pointer-events: none;
}

.banner-shine {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.15) 0%, 
    rgba(255, 255, 255, 0) 50%, 
    rgba(255, 255, 255, 0) 100%);
  z-index: 4;
  pointer-events: none;
}

/* =============== 3D公告栏样式 =============== */
.notice-card {
  margin: 0 30rpx 40rpx;
  padding: 24rpx 30rpx;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  box-shadow: 
    0 8rpx 20rpx var(--shadow-color),
    0 2rpx 8rpx var(--shadow-color-light),
    0 1rpx 0 rgba(255, 255, 255, 0.8) inset;
  position: relative;
  animation: fadeInUp 0.8s 0.2s cubic-bezier(0.26, 0.86, 0.44, 0.985) backwards;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.5);
  transform-style: preserve-3d;
  transform: perspective(1000rpx) translateZ(0) rotateX(var(--card-rotation-x));
}

@keyframes fadeInUp {
  from { opacity: 0; transform: perspective(1000rpx) translateZ(0) rotateX(var(--card-rotation-x)) translateY(30rpx); }
  to { opacity: 1; transform: perspective(1000rpx) translateZ(0) rotateX(var(--card-rotation-x)) translateY(0); }
}

.notice-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: 
    radial-gradient(circle at 30% 20%, rgba(232, 108, 0, 0.05) 0%, transparent 60%),
    url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='10' cy='10' r='1' fill='%23E86C00' fill-opacity='0.05'/%3E%3C/svg%3E");
  z-index: 0;
  pointer-events: none;
  opacity: 0.8;
}

.notice-left {
  margin-right: 20rpx;
  perspective: 500rpx;
}

.notice-icon-3d {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  transform-style: preserve-3d;
  transform: translateZ(25rpx) rotateY(0deg);
  animation: noticeIconRotate 6s infinite linear;
}

@keyframes noticeIconRotate {
  0% { transform: translateZ(25rpx) rotateY(0deg); }
  100% { transform: translateZ(25rpx) rotateY(360deg); }
}

.notice-icon-face {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(232, 108, 0, 0.1);
  border: 1px solid rgba(232, 108, 0, 0.2);
  backface-visibility: hidden;
}

.notice-icon-face.front {
  transform: translateZ(25rpx);
  border-radius: 50%;
}

.notice-icon-face.back {
  transform: rotateY(180deg) translateZ(25rpx);
  border-radius: 50%;
}

.notice-icon-face.left {
  transform: rotateY(-90deg) translateZ(25rpx);
  background: rgba(232, 108, 0, 0.05);
}

.notice-icon-face.right {
  transform: rotateY(90deg) translateZ(25rpx);
  background: rgba(232, 108, 0, 0.05);
}

.notice-icon-face.top {
  transform: rotateX(90deg) translateZ(25rpx);
  background: rgba(232, 108, 0, 0.05);
}

.notice-icon-face.bottom {
  transform: rotateX(-90deg) translateZ(25rpx);
  background: rgba(232, 108, 0, 0.05);
}

.notice-content {
  flex: 1;
  overflow: hidden;
  position: relative;
  z-index: 2;
  transform: translateZ(20rpx);
}

.notice-swiper {
  height: 40rpx;
}

.notice-item {
  font-size: 26rpx;
  color: var(--secondary-dark);
  line-height: 40rpx;
  position: relative;
}

.notice-text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.notice-blink {
  position: absolute;
  left: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: var(--primary);
  box-shadow: 0 0 5rpx var(--primary);
  animation: noticeBlink 1s infinite alternate;
}

@keyframes noticeBlink {
  from { opacity: 0.5; }
  to { opacity: 1; }
}

.notice-ripple {
  position: absolute;
  top: 50%;
  left: 50rpx;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(232, 108, 0, 0.3);
  z-index: 1;
  opacity: 0;
  animation: noticeRipple 3s infinite;
}

@keyframes noticeRipple {
