/* index.wxss */

/* 定义关键颜色和设计变量 */
page {
  --primary: #E86C00;
  --primary-dark: #D15700;
  --primary-darker: #A83A31;
  --primary-light: #FF9248;
  --primary-lighter: #FFBB85;
  --primary-lightest: #FFF0E5;
  
  --secondary: #8C6E56;
  --secondary-light: #A58D7F;
  --secondary-dark: #583517;
  
  --accent: #2ECC71;
  --accent-dark: #27AE60;
  
  --danger: #E53935;
  
  --neutral-100: #FFFFFF;
  --neutral-95: #F9F9F9;
  --neutral-90: #F0F0F0;
  --neutral-80: #E2E2E2;
  --neutral-70: #CCCCCC;
  --neutral-60: #A0A0A0;
  --neutral-50: #808080;
  --neutral-40: #666666;
  --neutral-30: #4D4D4D;
  --neutral-20: #333333;
  --neutral-10: #1A1A1A;
  --neutral-0: #000000;
  
  --background: #f9f2e7;
  --card-bg: #FFFFFF;
  
  --shadow-color: rgba(88, 53, 23, 0.15);
  --shadow-color-dark: rgba(88, 53, 23, 0.3);
  --shadow-color-light: rgba(88, 53, 23, 0.1);
  
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-xxl: 40rpx;
  --radius-round: 9999rpx;
  
  --transition-fast: 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-bounce: 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  
  --spacing-xs: 4rpx;
  --spacing-sm: 8rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  --spacing-xxl: 48rpx;
  
  /* 3D变量 */
  --perspective: 1500rpx;
  --card-thickness: 10rpx;
  --category-size: 120rpx;
  --card-rotation-x: -5deg;
  --card-rotation-y: 15deg;
  
  /* 字体设置 */
  font-family: "PingFang SC", "Helvetica Neue", "Microsoft YaHei", sans-serif;
}

/* 全局容器 */
.index-container {
  position: relative;
  min-height: 100vh;
  background-color: var(--background);
  color: var(--secondary-dark);
  overflow-x: hidden;
  font-size: 28rpx;
}

/* =============== 高级背景纹理 =============== */
