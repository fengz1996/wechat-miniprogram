page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  padding-bottom: 120rpx;
}

/* 通用样式 */
.section-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx;
  background: #f8f8f8;
}

/* 地址选择部分样式 */
.address-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  background-image: url("data:image/svg+xml,%3Csvg t='1597912583709' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='3163' width='32' height='32'%3E%3Cpath d='M512 96c-199.872 0-362 159.36-362 356 0 196.688 295.296 455.712 307.816 467.712 11.728 11.28 27.064 16.912 42.456 16.912h23.448c15.392 0 30.736-5.632 42.456-16.912C578.704 907.712 874 648.688 874 452c0-196.64-162.128-356-362-356z m0 444c-61.76 0-112-50.24-112-112s50.24-112 112-112 112 50.24 112 112-50.24 112-112 112z' fill='%23ff4500' p-id='3164'%3E%3C/path%3E%3C/svg%3E");
  background-size: contain;
  background-repeat: no-repeat;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.address-content {
  flex: 1;
}

.contact-info {
  display: flex;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-bottom: 10rpx;
}

.name {
  margin-right: 20rpx;
  font-weight: bold;
}

.phone {
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 36rpx;
}

.arrow-right {
  width: 16rpx;
  height: 28rpx;
  background-image: url("data:image/svg+xml,%3Csvg t='1597913433297' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='3750' width='16' height='16'%3E%3Cpath d='M761.056 532.128c0.512-0.992 1.344-1.824 1.792-2.848 8.8-18.304 5.92-40.704-9.664-55.424L399.936 139.744c-19.264-18.208-49.632-17.344-67.872 1.888-18.208 19.264-17.376 49.632 1.888 67.872l316.96 299.84-315.712 304.288c-19.072 18.4-19.648 48.768-1.248 67.872 9.408 9.792 21.984 14.688 34.56 14.688 12 0 24-4.48 33.312-13.44l350.048-337.376c0.672-0.672 0.928-1.6 1.6-2.304 0.512-0.48 1.056-0.832 1.568-1.344C757.76 538.88 759.2 535.392 761.056 532.128z' fill='%23999999' p-id='3751'%3E%3C/path%3E%3C/svg%3E");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  flex-shrink: 0;
}

.no-address {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  width: 100%;
}

/* 订单商品列表 */
.order-items {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.item-list {
  padding: 0 20rpx;
}

.order-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-price-qty {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 28rpx;
  color: #ff4500;
  font-weight: bold;
}

.item-quantity {
  font-size: 26rpx;
  color: #999;
}

.order-summary {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border-top: 1rpx solid #f5f5f5;
}

/* 配送方式 */
.delivery-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.delivery-options {
  padding: 20rpx;
}

.delivery-option {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.delivery-option:last-child {
  border-bottom: none;
}

.option-radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.radio-inner {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ff4500;
}

.delivery-option.selected .option-radio {
  border-color: #ff4500;
}

.delivery-fee {
  margin-left: auto;
  font-size: 26rpx;
  color: #ff4500;
}

/* 支付方式 */
.payment-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.payment-options {
  padding: 20rpx;
}

.payment-option {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.payment-option:last-child {
  border-bottom: none;
}

.payment-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
}

.payment-icon.online {
  background-image: url("data:image/svg+xml,%3Csvg t='1597914633385' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='10359' width='32' height='32'%3E%3Cpath d='M512 0C229.376 0 0 229.376 0 512s229.376 512 512 512 512-229.376 512-512S794.624 0 512 0z m242.688 500.224l-256 256c-12.288 12.288-32.768 12.288-45.056 0l-128-128c-12.288-12.288-12.288-32.768 0-45.056s32.768-12.288 45.056 0L480 691.2l234.688-234.688c12.288-12.288 32.768-12.288 45.056 0 10.752 12.288 10.752 31.232-5.056 43.712z' fill='%231AAD19' p-id='10360'%3E%3C/path%3E%3C/svg%3E");
}

.payment-icon.cod {
  background-image: url("data:image/svg+xml,%3Csvg t='1597914693385' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='11359' width='32' height='32'%3E%3Cpath d='M896 0H128C57.6 0 0 57.6 0 128v576c0 70.4 57.6 128 128 128h768c70.4 0 128-57.6 128-128V128c0-70.4-57.6-128-128-128zM128 64h768c35.2 0 64 28.8 64 64v96H64V128c0-35.2 28.8-64 64-64z m768 704H128c-35.2 0-64-28.8-64-64V288h896v416c0 35.2-28.8 64-64 64z' fill='%23FF6B00' p-id='11360'%3E%3C/path%3E%3Cpath d='M704 128m-32 0a32 32 0 1 0 64 0 32 32 0 1 0-64 0Z' fill='%23FF6B00' p-id='11361'%3E%3C/path%3E%3Cpath d='M832 128m-32 0a32 32 0 1 0 64 0 32 32 0 1 0-64 0Z' fill='%23FF6B00' p-id='11362'%3E%3C/path%3E%3Cpath d='M256 832h64v128h-64zM704 832h64v128h-64zM360.448 920.256l283.52-37.664 8.448 63.552-283.52 37.632z' fill='%23FF6B00' p-id='11363'%3E%3C/path%3E%3C/svg%3E");
