/* 优惠券样式 */
.discount-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.discount-options {
  padding: 20rpx;
}

.discount-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(to right, #ff9a9e, #fad0c4);
  border-radius: 12rpx;
  position: relative;
}

.discount-option:last-child {
  margin-bottom: 0;
}

.discount-option.selected {
  background: linear-gradient(to right, #ff4500, #ff7e54);
}

.discount-option.selected::after {
  content: '';
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-image: url("data:image/svg+xml,%3Csvg t='1597914833385' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='12359' width='32' height='32'%3E%3Cpath d='M512 0C229.376 0 0 229.376 0 512s229.376 512 512 512 512-229.376 512-512S794.624 0 512 0z m242.688 500.224l-256 256c-12.288 12.288-32.768 12.288-45.056 0l-128-128c-12.288-12.288-12.288-32.768 0-45.056s32.768-12.288 45.056 0L480 691.2l234.688-234.688c12.288-12.288 32.768-12.288 45.056 0 10.752 12.288 10.752 31.232-5.056 43.712z' fill='%23FFFFFF' p-id='12360'%3E%3C/path%3E%3C/svg%3E");
  background-size: contain;
  background-repeat: no-repeat;
}

.discount-info {
  color: #fff;
}

.discount-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.discount-name {
  font-size: 24rpx;
}

.no-discount {
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-top: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
}

/* 备注 */
.remark-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.remark-input {
  padding: 20rpx;
  position: relative;
}

.remark-input textarea {
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.remark-count {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  font-size: 24rpx;
  color: #999;
}

/* 订单金额 */
.order-total {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.total-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #333;
}

.discount-text {
  color: #ff4500;
}

.total-row.final {
  padding-top: 20rpx;
  margin-top: 10rpx;
  border-top: 1rpx solid #f5f5f5;
  font-weight: bold;
}

.final-price {
  color: #ff4500;
  font-size: 36rpx;
}

/* 底部结算栏 */
.confirm-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.total-section {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.footer-price {
  color: #ff4500;
  font-size: 36rpx;
  font-weight: bold;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  background: linear-gradient(to right, #ff4500, #ff7e54);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}