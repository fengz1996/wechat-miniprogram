.container {
  padding: 0;
}

.user-info {
  height: 300rpx;
  background: linear-gradient(to right, #FF9035, #FF6A00);
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  position: relative;
}

.avatar-container {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.user-detail {
  margin-left: 30rpx;
}

.user-name {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-phone {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.card {
  margin: 30rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.order-card {
  margin-top: -60rpx;
  position: relative;
  z-index: 1;
}

.card-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #F5F5F5;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
}

.view-all {
  font-size: 28rpx;
  color: #999999;
}

.order-icons {
  display: flex;
  padding: 30rpx 0;
}

.order-icon-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.pending-icon {
  /* 待支付图标样式 */
}

.completed-icon {
  /* 已完成图标样式 */
}

.order-icon-text {
  font-size: 26rpx;
  color: #666666;
}

.menu-list {
  margin: 30rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.menu-item {
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #F5F5F5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.address-icon {
  /* 地址图标样式 */
}

.contact-icon {
  /* 联系客服图标样式 */
}

.about-icon {
  /* 关于我们图标样式 */
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
}

.menu-arrow {
  width: 30rpx;
  height: 30rpx;
  /* 箭头图标样式 */
}